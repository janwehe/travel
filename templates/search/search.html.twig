{% extends (is_granted('IS_AUTHENTICATED_FULLY')) ? 'base_loggedin.html.twig' : 'base.html.twig' %}

{% block content %}

    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="container-sm">
            <div class="row">
                <div class="col col-12">

                    <div class="col-lg-12 text-center">
                        <h1>Wohin m√∂chtest du reisen?</h1>
                    </div>

                    {{ form_start(form)  }}

                        <div class="mb-3 form-control-lg">
                            {{ form_widget(form.destination) }}
                        </div>

                        {% if (form.search is defined) and (is_granted('IS_AUTHENTICATED_FULLY')) %}
                            <div class="mb-3 form-control-lg text-center">
                                {{ form_widget(form.search) }}
                            </div>
                        {% endif %}

                        {% if (is_granted('IS_AUTHENTICATED_FULLY') == false) %}
                            <div class="mb-3 text-center">
                                <p>Um die Suche zu nutzen bitte <a href="{{ path('register') }}" class="text-orange">registrieren</a> oder <a href="{{ path('login') }}" class="text-orange">einloggen</a></p>
                            </div>
                        {% endif %}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}